@model IEnumerable<RegistrationAdvisory.Models.AdvisoryModel>

@{
    ViewBag.Title = "Registration Status-";

}

<h2>@ViewBag.Title @ViewBag.currentSemester</h2>

<h4>@ViewBag.message</h4>
<hr/>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.courseId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.courseName)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.credit)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.courseId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.courseName)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.credit)
        </td>
        
    </tr>
}

</table>
<hr/>

@if (RegistrationAdvisory.Models.UserSession.STUDENTINSUMMARY != "")
{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    using (Html.BeginForm("Panel", "Adviser", FormMethod.Post))
    {
        @*resubmit student id being view by admin to enable navigation back to summary page*@
        <input type="text" value="@RegistrationAdvisory.Models.UserSession.STUDENTINSUMMARY" hidden name="id" />
        <input type="submit" value="Back to Summary Page" class="btn btn-link" />
    }

}

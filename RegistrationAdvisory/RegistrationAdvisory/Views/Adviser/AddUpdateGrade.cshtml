
@{
    ViewBag.Title = "AddUpdateGrade";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Add / Update Student's Grade</h4>
<table class="table-bordered table-stripped table-condensed">
    <tr>
        <td><span style="color:brown; font-size:large">@ViewBag.studentName</span></td>
        <td><span style="color:brown; font-size:large">@ViewBag.department</span></td>
    </tr>
</table>
<p></p>


@using (Html.BeginForm("AddUpdateGrade", "Adviser", FormMethod.Post))
{
    <div class="form-horizontal">

        <div class="form-group">
            @Html.Label("Student ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("studentId", null, new { @class = "form-control", required = "required", type = "text" })

            </div>
        </div>

        <div class="form-group">
            @Html.Label("Course ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("courseId", null, new { @class = "form-control", required = "required", type = "text" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Check for Grade" name="cmd" class="btn btn-default" />
            </div>
        </div>

    </div>
}    
    

<p><span style="color:forestgreen; font-size:large">@ViewBag.status</span></p>
<p><span style="color:darkorange; font-size:large">@ViewBag.statusgrade</span></p>
<p><span style="color:red; font-size:large">@ViewBag.error</span></p>statusgrade
    
    @using (Html.BeginForm("AddUpdateGrade", "Adviser", FormMethod.Post))
    {

        if (RegistrationAdvisory.Models.UserSession.ISINSERT != "")
        {
            <table class="table table-bordered">
                <tr><th>Student ID</th><th>Course ID</th><th>Semester Offered</th><th>Grade</th></tr>

                <tr>
                    <td><input type="text" value="@ViewBag.studentId" name="studentId" readonly style="background-color:gainsboro"/></td>
                    <td><input type="text" value="@ViewBag.courseId" name="courseId" readonly  style="background-color:gainsboro"/></td>
                    <td><input type="text" value="@ViewBag.offering" name="semesterNo" required style="background-color:yellow" /></td>
                    <td><input type="text" value="@ViewBag.grade" name="grade" required style="background-color:yellow" /></td>
                </tr>

            </table>
                    <input type="submit" value="Update Grade" name="cmd" />
        }
   

}

<div>
    @Html.ActionLink("Back to Control Panel", "Panel", "Adviser")
</div>
           

